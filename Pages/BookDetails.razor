@page "/books/{BookTitle}/{BookId}"
@inherits BookDetailsBase

<div class="row">
    <div class="col-lg-4 col-sm-12">
        <img src="@Book.CoverImg" alt="" class="img-fluid">
    </div>
    <div class="col-lg-6 col-sm-12">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped">
                <tbody>
                    <tr>
                        <td>Name  </td>
                        <td>@Book.Title</td>
                    </tr>
                    <tr>
                        <td>Price   </td>
                        <td>@Book.Price</td>
                    </tr>
                    <tr>
                        <td>Published  </td>
                        <td>@Book.PublishedAt</td>
                    </tr>
                    <tr>
                        <td>Author Name  </td>
                        <td>@Book.AuthorId.Name</td>
                    </tr>
                    <tr>
                        <td>Avaliable  </td>
                        <td>@Avilable</td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
        <div class="row mt-3">
             <div class="col-sm-12 col-lg-12">
                   <NavLink class="btn btn-success text-white" href="books">
                        Back To List
                    </NavLink>
                    <NavLink class="btn btn-warning text-secondary">
                         Edit This Book
                     </NavLink>
                     <NavLink class="btn btn-danger text-white">
                        Delete
                     </NavLink>
              </div>
        </div>
    </div>
  
</div>
